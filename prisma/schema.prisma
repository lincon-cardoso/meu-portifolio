generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEW_DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  hashedPassword String?
  role           Role      @default(ADMIN) // ðŸ‘ˆ ADICIONADO
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Role {
  ADMIN
}

model Projeto {
  id          String   @id @default(cuid())
  titulo      String
  descricao   String
  imagem      String?
  category    String
  tecnologias String[]
  link        String?
  linkGithub  String?
  criadoEm    DateTime @default(now())
  usuarioId   String
  destaque    Boolean  @default(false)
}
